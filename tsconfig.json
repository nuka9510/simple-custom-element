    "checkJs": true,
    "strictNullChecks": false,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@nuka9510/simple-custom-element": ["src/index.ts"],
      "@nuka9510/simple-custom-element/plugin": ["src/plugin/index.ts"],
      "@nuka9510/simple-custom-element/@types/component": ["@types/component.d.ts"],
      "@nuka9510/simple-custom-element/@types/interceptor": ["@types/interceptor.d.ts"],
      "@nuka9510/simple-custom-element/@types/register": ["@types/register.d.ts"],
      "@nuka9510/simple-custom-element/@types/plugin": ["@types/plugin.d.ts"],
      "@nuka9510/simple-custom-element/@types/plugin/util-action": ["@types/plugin/util-action.d.ts"]
